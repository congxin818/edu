    position: absolute;  
    left: 0;  
    right: 0;  
    top: 0;  
    bottom: 0;  
}  
.middle-phone{  
    width: 282rpx;  
    height: 383rpx;  
    position: absolute;  
    left: 50%;  
    top: -20rpx;  
